{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "jsxBracketSameLine": true,
    "useTabs": false,
    "phpVersion": "7.2",
    "trailingCommaPHP": true,
    "braceStyle": "psr-2",
    "requirePragma": false,
    "insertPragma": false,
    "overrides": [
        {
            "files": "*.yaml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "composer.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "package.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.html",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "*.php",
            "options": {
                "singleQuote": false
            }
        }
    ]
}
